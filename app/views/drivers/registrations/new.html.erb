<div class="container">
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
    <div class="panel panel-success shadow" >
      <div class="panel-heading">
        <div class="panel-title">New Driver Registration</div>
        <div style="float:right; font-size: 80%; position: relative; top:-30px">
          <%= render "devise/shared/links" %>
        </div>
      </div>
      <div style="padding-top:30px" class="panel-body" >
        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <form id="loginform" class="form-horizontal" role="form">
          <div class="row">
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <%= f.input :first_name, label:"What's your first name?" %>
              </div>
            </div>
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <%= f.input :last_name, label:  "What's your last name?" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                <%= f.input :email, label:  "Enter Your Email" %>
              </div>
            </div>
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-mobile-phone"></i></span>
                <%= f.input :cellphone, label:  "Telephone" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
                <%= f.input :street_address_1, label:  "Street Address" %>
              </div>
            </div>
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-map-pin"></i></span>
                <%= f.input :street_address_2, label:  "Additional address info (if any)" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-globe"></i></span>
                <%= f.input :city, label: "City"%>
              </div>
            </div>
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-map-signs"></i></span>
                <%= f.input :state, collection: Driver::States, label: false, placeholder: "State" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-map"></i></span>
                <%= f.input :zip_code, label:  "What's Your Zip?"%>
              </div>
            </div>
            <div class="col-sm-6">

                <%= f.text_field :dob %>

            </div>
          </div>
          
          <div class="row">
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                <%= f.input :password, required: true, label:"Choose a password" %>
              </div>
            </div>
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                <%= f.input :password_confirmation, required: true, label:  "Confirm your password" %>
              </div>
            </div>
          </div>
          <div class="input-group">
            <div class="checkbox">
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>
          <div style="margin-top:10px" class="form-group">
            <!-- Button -->
            <div class="col-sm-12 controls">
              <%= f.button :submit, "Register", class: "btn btn-success btn-3d" %>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<% end %>
<%= render "drivers/shared/links" %>
