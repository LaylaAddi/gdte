<div class="container">
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, required: true, autofocus: true %>
    <%= f.input :last_name, required: true %>
    <%= f.input :email, required: true %>

    <%= f.input :telephone, required: true %>
    <%= f.input :street_address_1, required: true %>
    <%= f.input :street_address_2, required: true %>
    <%= f.input :city, required: true %>
    <%= f.input :state, collection: Driver::STATES, label: "Select State", required: true %>
    <%= f.input :zip_code, required: true %>
    <%= f.input :dob, start_year: 1930, label: "Date Of Birth" %>

    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "drivers/shared/links" %>

