<div class='container'>
	<%= paginate @drivers %> 
<table class="table table-bordered table-responsive">
	<thead>
		<tr>
			<th>
				Driver ID
			</th>
			<th>
				<div class="btn-group">
<button type="button" class="btn btn-primary dropdown-toggle btn-xs" data-toggle="dropdown">
		Internal Status <span class="caret"></span></button>
<ul class="dropdown-menu" role="menu">
              
              <li><%= link_to "Pending Approval", drivers_path(internal_driver_status: "Pending") %></li>
              <li><%= link_to "Approved", drivers_path(internal_driver_status: "Approved") %></li>
              <li><%= link_to "Active", drivers_path(internal_driver_status: "Active") %></li>
              <li><%= link_to "Declined", drivers_path(internal_driver_status: "Declined") %></li>
              <li><%= link_to "Suspended", drivers_path(internal_driver_status: "Suspended") %></li>
              <li><%= link_to "Vacation", drivers_path(internal_driver_status: "Vacation") %></li>
              <li><%= link_to "Fired", drivers_path(internal_driver_status: "Fired") %></li>
<li class="divider"></li>
<li><%= link_to "All Drivers", drivers_path %></li>
</ul>
</div>
			</th>
			<th>
				Driver Name
			</th>
			<th>
				Location
			</th>
			<th>
				Years of Experience
			</th>
			<th>
				Hazmat
			</th>
			<th>
				Submitted On
			</th>
			<th>
		   Updated By
			</th>
		</tr>
	</thead>
	<% @drivers.each do |driver| %>
	<tbody>
		<tr>
			<td>
				<%= link_to driver do %>
				<%= driver.id %>
				<% end %>
			</td>
			<td>
				<%= link_to driver do %>
				<%= driver.internal_driver_status %>
				<% end %>
			</td>
			<td>
				<%= link_to driver do %>
				<%= driver.full_name %>
				<% end %>
			</td>
			<td>
				<%= driver.city %>, <%= driver.state %>
			</td>
			<td>
				<%= driver.years_of_experience %>
			</td>
			<td>
				<% if driver.hazmat == true %>
				Yes
				<% else %>
				No
				<% end %>
			</td>
			<td>
				<%= driver.created_at.strftime("%A %B %e, %Y") %> 
			</td>
			<td>
        <% if driver.updated_by.blank? %> 
        Never Updated
        <% else %> 
        <%= driver.updated_by %>
        <% end %> 
			</td>
		</tr>
	</tbody>
	<% end %>
</table>

<%= paginate @drivers %> 

</div>

     