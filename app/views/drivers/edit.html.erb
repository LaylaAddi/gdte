<div class="container">
  <h2>Edit I want here</h2>
  <%= simple_form_for(@driver) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :email, required: true %>
    <%= f.simple_fields_for :driver_profile do |dp| %>
    <%=  %>
    <%= dp.input :full_name, required: true, autofocus: true %>
    <%= dp.input :telephone, required: true %>
    <%= dp.input :street_address_1, required: true %>
    <%= dp.input :street_address_2, required: true %>
    <%= dp.input :city, required: true %>
    <%= dp.input :state, collection: DriverProfile::STATES, label: "Select State", required: true %>
    <%= dp.input :zip_code, required: true %>
    <%= dp.input :dob, start_year: 1930, label: "Date Of Birth" %>
    <%= dp.input :license_number, label: "License Number" %>
    <%= dp.input :social_number, label: "Your SSN" %>
    <label>Years of Commercial Driving Experience</label>
    <%= dp.input(:years_of_experience, label: false, 
      input_html: { min: '0', step: '0.5', style: 'width: 100px'}) %> 
    <label>Upload Your License</label>
    <%= dp.input :license_image, as: :file, label: false %> 
    <%= dp.input :social_image, as: :file, 
      label: "Upload Your SSN Card"  %>
    <%= dp.input :medical_image, as: :file, 
      label: "Upload a copy of your medical card"  %>  
    <%= dp.input :pdf, as: :file,
      label: 'PDF File Upload' %> 
    <label>Other information that may help us with your application</label>    
    <%= dp.input :info, label: false  %>   
    <%= dp.input :hazmat, 
      label: 'Yep, I have a Hazardous Materials Endorsement' %>
    <%= dp.input :dryvan, 
      label: "DryVan" %>   
    <%= dp.input :reefer, 
      label: 'I like it cool, get me a Reefer.' %>
    <%= dp.input :flatbed, 
      label: 'Flatbed / Stepdeck' %> 
      <% end %>
    
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
  <% end %>
  <%= link_to "Back", :back %>
</div>