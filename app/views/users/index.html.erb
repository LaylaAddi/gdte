<div class='container'>
	<% if %>	
	<% params[:user_type] == "office" %>
	<h4>Office Employees</h4>
	<% elsif %>
	<% params[:user_type] == "dispatch" %>
	<h4>Dispatchers</h4>
	<% elsif %>
	<% params[:user_type] == "registered"  %>   
	<h4>Waiting for assignment</h4>
	<% elsif %>	
	
	<h4></h4>
	<% end %>
	
	<% if %>	
	<% params[:employment_status] == "pending" %>
	<h4>Pending and waiting for a status update</h4>
	<% elsif %>
	<% params[:employment_status] == "approved" %>
	<h4>Approved.  Waiting for active status and assignment</h4>
	<% elsif %>
	<% params[:employment_status] == "active" %>
	<h4>Active Employees</h4>
	<% elsif %>	
	<% params[:employment_status] == "declined" %>
	<h4>Application Declined</h4>
	<% elsif %>
	<% params[:employment_status] == "suspended" %>
	<h4>Suspended Employees</h4>
	<% elsif %>	
	<% params[:employment_status] == "vacation" %>
	<h4>Employees on vacation</h4>
	<% elsif %>
	<% params[:employment_status] == "fired" %>
	<h4>Fired Employees</h4>
	<% params[:employment_status] == "sick_leave" %>
	<h4>Off Sick</h4>	
	<% elsif %>

	<% end %>
	
	<%= paginate @users %> 
