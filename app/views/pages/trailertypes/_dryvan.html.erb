<section id="details">
  <div class="container">
    <div class="row">
      <!-- toggle -->
      <div class="col-md-4 col-sm-4">
        <div class="toggle toggle-accordion toggle-transparent toggle-bordered-full">
          <div class="toggle active">
            <label>Dry Van <%= link_to "Driver Application", new_driver_registration_path %></label>
            <div class="toggle-content">
              <p>
                Dry van trucking is the most common form of shipping freight and 
                uses simple enclosed non-climate controlled rectangular trailers. Any 
                type of general cargo that does not require 
                refrigeration is appropriate for this method of transportation. 
              </p>
            </div>
          </div>
        </div>
      </div>
      <!-- /toggle -->
      <!-- skills -->
      <div class="col-md-4 col-sm-4">
        <h4>Pay</h4>
        <label>
        <span class="pull-right">$0.43/mile</span>
        Base Pay
        </label>
        <div class="progress progress-xxs">
          <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%; min-width: 2em;"></div>
        </div>
        <label>
        <span class="pull-right">$0.48/mile</span>
        With Hazmat
        </label>
        <div class="progress progress-xxs">
          <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 88%; min-width: 2em;"></div>
        </div>
        <label>
        <span class="pull-right">$1000.00</span>
        Bonus After 90 Days
        </label>
        
        <div class="progress progress-xxs">
          <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 77%; min-width: 2em;"></div>
        </div>


      </div>
      <!-- /skills -->
      <!-- recent news -->
      <div class="col-md-4 col-sm-4">
        <h4>DRY VAN</h4>
        <div class="row tab-post">
          <%= image_tag('dryvan.jpg', class: 'img-rounded')%> 
        </div>
      </div>
      <!-- /recent news -->
    </div>
  </div>
</section>