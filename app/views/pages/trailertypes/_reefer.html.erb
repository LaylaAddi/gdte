<section id="details">
  <div class="container">
    <div class="row">
      <!-- toggle -->
      <div class="col-md-4 col-sm-4">
        <div class="toggle toggle-accordion toggle-transparent toggle-bordered-full">
          <div class="toggle active">
            <label>Reefer <%= link_to "Driver Application", new_driver_registration_path %></label>
            <div class="toggle-content">
              <p>
              Refrigerated trucks can transport either 
              temperature-sensitive or dry freight, 
              and sometimes some of each on various occasions. 
              The ability to haul both types of goods makes refrigerated 
              trucking more versatile. 
              </p>
            </div>
          </div>
        </div>
      </div>
      <!-- /toggle -->
      <!-- skills -->
      <div class="col-md-4 col-sm-4">
        <h4>Pay</h4>
        <label>
        <span class="pull-right">$0.45/Mile</span>
        Base Pay
        </label>
        <div class="progress progress-xxs">
          <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%; min-width: 2em;"></div>
        </div>
        <label>
        <span class="pull-right">$0.50/Mile</span>
        With Hazmat
        </label>
        <div class="progress progress-xxs">
          <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 88%; min-width: 2em;"></div>
        </div>
        <label>
        <span class="pull-right">$1000.00</span>
        Bonus After 90 Days
        </label>
        
        
        <div class="progress progress-xxs">
          <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 99%; min-width: 2em;"></div>
        </div>
      </div>
      <!-- /skills -->
      <!-- recent news -->
      <div class="col-md-4 col-sm-4">
        <h4>REFRIGERATED</h4>
        <div class="row tab-post">
          <%= image_tag('reefer.jpg', class: 'img-rounded')%> 
        </div>
      </div>
      <!-- /recent news -->
    </div>
  </div>
</section>