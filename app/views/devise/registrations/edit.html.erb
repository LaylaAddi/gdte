<div class="container">
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
    <div class="panel panel-success shadow" >
      <div class="panel-heading">
        <div class="panel-title">Edit My Profile</div>
        <div style="float:right; font-size: 80%; position: relative; top:-30px">

        </div>
      </div>
      <div style="padding-top:30px" class="panel-body" >
        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <form id="loginform" class="form-horizontal" role="form">
          <div class="row">
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <%= f.input :first_name, label: "First Name" %>
              </div>
            </div>
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <%= f.input :last_name, label: "Last Name" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                <%= f.input :email, label: "Email" %>
              </div>
            </div>
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
                <%= f.input :cellphone, label: "My Cellphone" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
                <%= f.input :street_address_1, label:"My Street Address" %>
              </div>
            </div>
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-map-pin"></i></span>
                <%= f.input :street_address_2, label: "Additional address info (if any)" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-globe"></i></span>
                <%= f.input :city, label: "City"%>
              </div>
            </div>
            <div class="col-sm-6">
              <div style="margin-bottom: 25px; padding-top: 27px;" class="input-group">
                <span class="input-group-addon"><i class="fa fa-map-signs"></i></span>
                <%= f.input :state, collection: User::States, label: false, include_blank: "Select a State"  %>
              </div>
            </div>
          </div>
                   <div class="row">
            <div class="col-sm-6">
              <div style="margin-bottom: 25px; padding-top: 0px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-map"></i></span>
                <%= f.input :zip_code, label: "My Zip" %>
              </div>
            </div>
            <div class="col-sm-6">
<label class="text-center">Date Of Birth</label>
               
                <%=  f.input :dob, start_year: 1930, label: false  %>

            </div>
          </div>
          
                   <div class="row">
            <div class="col-sm-6">
              <div style="margin-bottom: 25px; padding-top: 0px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-map"></i></span>
                <%= f.input :zip_code, label: "My Zip" %>
              </div>
            </div>
            <div class="col-sm-6">


            </div>
          </div>          
          
          
          <div class="row">
            <div class="col-sm-4">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
<%= f.input :office_location, collection: User::OfficeLocation, label: "Office Location", include_blank: "Office Location" %>
              </div>
            </div>            
            <div class="col-sm-4">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-phone"></i></span>
               <%= f.input :office_phone, label: "Office Telephone" %>
              </div>
            </div>
            <div class="col-sm-4">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-phone-square"></i></span>
<%= f.input :extention, label: "My office extention" %>

              </div>
            </div>
          </div>
       
          <div class="row">
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-ambulance"></i></span>
                <%= f.input :e_contact_name, label: "Who can we call in case of an emergency?" %>
              </div>
            </div>
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-hospital-o"></i></span>
                <%= f.input :e_contact_number, label:  "What's their number?" %>
              </div>
            </div>
          </div>          
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>


           <div class="row">
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                <%= f.input :current_password, hint: "we need your current password to confirm your changes",
                  required: true %>              
              </div>
            </div>
            <div class="col-sm-6">
              <div style="margin-top:10px" class="form-group">
                <!-- Button -->
                <div class="col-sm-12 controls">
                  <%= f.button :submit, "Update", class: "btn btn-success btn-3d" %>
                </div>
              </div>
            </div>
          </div>
          <strong>
            <div class="text-center">
              If you want to change your password please enter it below then confirm
            </div>
            <br>
          </strong>
          <div class="row">
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-unlock"></i></span>
                <%= f.input :password, required: true, label: false, placeholder: "Enter a new password" %>
              </div>
            </div>
            <div class="col-sm-6">
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                <%= f.input :password_confirmation, required: true, label: false, placeholder: "Confirm your new password" %>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<% end %>